      <form <%= "action=modifier/"+adresse[i]._id.toString() %> method="POST">
        <input type="text" placeholder="Prenom" name="prenom" value="<%= adresse[i].prenom %>">
        <input type="text" placeholder="Nom" name="nom" value="<%= adresse[i].nom %>">
        <input type="text" placeholder="Telephone" name="telephone" value="<%= adresse[i].telephone %>">
        <%= adresse[i]._id.toString() %>
        <div class="lesBoutons">
          <button type="submit"></button>
          <a <%= "href=detruire/"+adresse[i]._id.toString() %>><div class="lea"></div></a>
        </div>
      </form>
    </li>
  <% } %>
  </ul>
  

